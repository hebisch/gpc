	$(srcdir)/p/script/make-homepage-gpcs $(srcdir)/p/doc $(HTML_DIR) es
	$(srcdir)/p/script/make-homepage-gpcs $(srcdir)/p/doc $(HTML_DIR) de
	chmod -R go+rX $(HTML_DIR)
	$(STAMP) "$@"

