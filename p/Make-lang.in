	$(srcdir)/p/script/make-homepage $(gpc_version) $(srcdir)/p/doc $(HTML_DIR) hr gpc-hr
	$(srcdir)/p/script/make-homepage $(gpc_version) $(srcdir)/p/doc $(HTML_DIR) es gpc-es
