  GCC_VERSION="$(GPC_GCC_VERSION)" \
  SHELL="$(SHELL)" \
  CFLAGS="$(CFLAGS)" \
  PFLAGS="$(PFLAGS)" \
  AR_FLAGS="$(AR_FLAGS)" \
  RTSFLAGS="$(RTSFLAGS)" \
